<% provide(:title, "All users") %>

<div class="users-wrapper box">
  <h1>All Users</h1>

  <div class="pagination"><%= will_paginate @users %></div>

  <table class="users">
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar.url(:thumb) %></td>
        <td class="user-name"><%= user.name %></td>
        <td>
          <%= button_to "Send friend request", 
              friendships_path(friended_id: user.id), method: :post,
              class: "btn" %>
        </td>
      </tr>
    <% end %>
  </table>

  <div class="pagination"><%= will_paginate @users %></div>
</div>

<script type="text/javascript">
  <% if current_page?(controller: 'users', action: 'index') %>
    $(".users-nav").addClass("current-page");
  <% end %>
</script>